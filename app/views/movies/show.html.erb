<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
    <h2>Released: <%= @movie.released_on %></h2>
  </header>
    <p>
      <%= @movie.description %>
    </p>

    <h3>
      <%= @movie.rating %> &bull; <%= @movie.duration %>
    </h3>

    <h3>Director</h3>
    <p>
      <%= @movie.director %>
    </p>

    <h3>Total Gross</h3>
    <p>
      <%= @movie.total_gross %>
    </p>

  <footer>
    <%= link_to "Write review", "", class:"button ok review" %>
    <nav>
      <%= link_to "Edit", edit_movie_path(@movie), class:"button" %>
      <%= link_to "Delete", @movie, class:"button",
            method: :delete, data: {confirm: "Are you sure?"} %>
    </nav>
  </footer>
</article>
